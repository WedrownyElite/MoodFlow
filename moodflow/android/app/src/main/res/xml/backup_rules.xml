<full-backup-content>
    <!-- Include Flutter's main shared preferences file -->
    <include domain="sharedpref" path="FlutterSharedPreferences.xml" />

    <!-- Include notification plugin files -->
    <include domain="sharedpref" path="notification_plugin_cache.xml" />
    <include domain="sharedpref" path="scheduled_notifications.xml" />

    <!-- Include other system files -->
    <include domain="sharedpref" path="android.app.ActivityThread.IDS.xml" />

    <!-- We can't exclude individual keys from FlutterSharedPreferences.xml -->
    <!-- So we'll handle sensitive data exclusion differently -->
</full-backup-content>