<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="12dp"
              android:background="@drawable/widget_background">

    <!-- Header with app name and navigation arrows -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

        <TextView
                android:id="@+id/widget_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MoodFlow"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/current_segment_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textColor="#B0FFFFFF"
                android:textSize="11sp" />
    </LinearLayout>

    <!-- Segment Navigation with Left/Right arrows -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

        <!-- Previous Segment Button -->
        <TextView
                android:id="@+id/prev_segment_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="◀"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/mood_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Previous Time Segment" />

        <!-- Current segment title -->
        <TextView
                android:id="@+id/segment_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="How's your morning going?"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

        <!-- Next Segment Button -->
        <TextView
                android:id="@+id/next_segment_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="▶"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/mood_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Next Time Segment" />
    </LinearLayout>

    <!-- 5 Emoji Mood Buttons -->
    <LinearLayout
            android:id="@+id/mood_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

        <!-- Very Bad - 😢 -->
        <TextView
                android:id="@+id/mood_1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="3dp"
                android:background="@drawable/mood_button_bg"
                android:text="😢"
                android:textSize="24sp"
                android:gravity="center"
                android:contentDescription="Very Bad Mood"
                android:clickable="true"
                android:focusable="true" />

        <!-- Bad - 🙁 -->
        <TextView
                android:id="@+id/mood_2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="3dp"
                android:background="@drawable/mood_button_bg"
                android:text="🙁"
                android:textSize="24sp"
                android:gravity="center"
                android:contentDescription="Bad Mood"
                android:clickable="true"
                android:focusable="true" />

        <!-- Neutral - 😐 -->
        <TextView
                android:id="@+id/mood_3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="3dp"
                android:background="@drawable/mood_button_bg"
                android:text="😐"
                android:textSize="24sp"
                android:gravity="center"
                android:contentDescription="Neutral Mood"
                android:clickable="true"
                android:focusable="true" />

        <!-- Good - 🙂 -->
        <TextView
                android:id="@+id/mood_4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="3dp"
                android:background="@drawable/mood_button_bg"
                android:text="🙂"
                android:textSize="24sp"
                android:gravity="center"
                android:contentDescription="Good Mood"
                android:clickable="true"
                android:focusable="true" />

        <!-- Very Good - 😊 -->
        <TextView
                android:id="@+id/mood_5"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="3dp"
                android:background="@drawable/mood_button_bg"
                android:text="😊"
                android:textSize="24sp"
                android:gravity="center"
                android:contentDescription="Very Good Mood"
                android:clickable="true"
                android:focusable="true" />
    </LinearLayout>

    <!-- Status message -->
    <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap an emoji to log your mood"
            android:textColor="#B0FFFFFF"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

    <!-- Open App Button -->
    <Button
            android:id="@+id/open_app_btn"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Open MoodFlow App"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/app_button_bg"
            android:layout_marginTop="4dp" />

</LinearLayout>